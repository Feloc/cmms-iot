# =====================
# Infra / Postgres
# =====================
TZ=America/Bogota
POSTGRES_USER=cmms
POSTGRES_PASSWORD=CHANGE_ME_STRONG
POSTGRES_DB=cmms

# OJO: en docker-compose.prod.yml el host del DB es "db"
DATABASE_URL=postgresql://cmms:CHANGE_ME_STRONG@db:5432/cmms?schema=public

# =====================
# Puertos internos (host LAN)
# =====================
WEB_PORT=3000
API_PORT=3001

# =====================
# API
# =====================
# Permite credenciales/cookies desde la web
CORS_ORIGINS=http://REPLACE_WITH_SERVER_IP:3000

# JWT (API) - CAMBIA en prod
JWT_SECRET=CHANGE_ME_JWT_STRONG

# Seed inicial (idempotente)
AUTO_SEED=true
PLATFORM_TENANT_SLUG=myz
PLATFORM_ADMIN_EMAIL=admin@myz.local
PLATFORM_ADMIN_NAME=Admin
PLATFORM_ADMIN_PASSWORD=CHANGE_ME_ADMIN_STRONG

# Storage
STORAGE_DRIVER=local
LOCAL_STORAGE_ROOT=/app/storage
LOCAL_PUBLIC_BASE=/files
ATTACHMENTS_DIR=/app/storage/attachments
ATTACHMENTS_MAX_MB=30
UPLOADS_DIR=/app/uploads

# =====================
# Web (Next.js / NextAuth)
# =====================
# URL p√∫blica por la que se accede a la web
NEXTAUTH_URL=http://REPLACE_WITH_SERVER_IP:3000
NEXTAUTH_SECRET=CHANGE_ME_NEXTAUTH_STRONG

# API desde el navegador (cliente)
NEXT_PUBLIC_API_URL=http://REPLACE_WITH_SERVER_IP:3001

# API desde el servidor (containers)
API_INTERNAL_URL=http://api:3001

# =====================
# MQTT (opcional)
# =====================
MQTT_URL=mqtt://mosquitto:1883
